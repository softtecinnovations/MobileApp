<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="otpedittext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">@dimen/dm_42sp</item>
        <item name="android:background">@drawable/otp</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:textSize">@dimen/dm_20sp</item>
        <item name="android:maxLength">1</item>
        <item name="android:textAlignment">center</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>
    <style name="backspacebtn">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:src">@drawable/backspace</item>
    </style>
    <style name="profile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dm_20sp</item>
        <item name="android:paddingStart">@dimen/dm_20sp</item>
        <item name="android:background">@drawable/edittext</item>
        <item name="android:layout_marginHorizontal">@dimen/dm_20sp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/roboto_slab</item>
    </style>
</resources>