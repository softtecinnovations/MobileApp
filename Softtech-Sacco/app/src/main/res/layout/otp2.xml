<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".otp.OtpActivity">

    <LinearLayout
        android:id="@+id/backbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/dm_20sp">
        <ImageButton
            android:id="@+id/backotp"
            android:layout_width="50sp"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:src="@drawable/backspace"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="44sp"
            android:gravity="start"
            android:text="Confirm OTP"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:fontFamily="@font/roboto"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textmessage"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/otpedt"
        android:layout_width="200sp"
        android:layout_height="45dp"
        android:layout_below="@+id/textmessage"
        android:layout_marginTop="@dimen/dm_20sp"
        android:hint="OTP"
        android:layout_centerHorizontal="true"
        android:background="@drawable/edittext"/>
    <Button
        android:id="@+id/otpbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/otpedt"
        android:layout_marginTop="@dimen/dm_20sp"
        android:layout_centerHorizontal="true"
        android:text="Get otp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="Time Remaining"
        android:textSize="17sp"
        android:fontFamily="@font/roboto"
        android:textColor="#676565"
        android:layout_marginBottom="@dimen/dm_20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:text="30s"
        android:textSize="17sp"
        android:fontFamily="@font/roboto"
        android:textColor="#676565"
        android:layout_marginBottom="@dimen/dm_20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="150dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/getList"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/arrow_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/buttonblue"
        android:layout_marginBottom="@dimen/dm_20sp"
        android:layout_marginEnd="@dimen/dm_20sp"
        />

</RelativeLayout>