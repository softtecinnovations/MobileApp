<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >




    <ScrollView
        android:id="@+id/sv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="30dp"
        android:paddingVertical="@dimen/dm_20sp"
        android:scrollbarSize="0sp"
        android:layout_centerHorizontal="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/vw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Mode"
                    android:textSize="@dimen/dm_20sp"
                    android:layout_marginEnd="60sp"
                    android:fontFamily="@font/roboto_slab"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/roboto_slab"
                    android:text="Layout"
                    android:textSize="@dimen/dm_20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/icons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/vw"
                android:layout_marginHorizontal="@dimen/dm_20sp"
                android:layout_marginTop="@dimen/dm_20sp">
                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dm_20sp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_baseline_person_24"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="@dimen/dm_20sp"
                        android:src="@drawable/ic_baseline_person_24"/>
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="10sp"
                        android:src="@drawable/ic_baseline_person_24"/>

                    <TextView
                        android:id="@+id/all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_row="2"
                        android:layout_column="0"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_slab"
                        android:text="All folders"
                        android:textSize="14sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Folders"
                        android:layout_marginEnd="10dp"
                        android:textSize="14sp"
                        android:layout_weight="1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:fontFamily="@font/roboto_slab"
                        android:text="Files"
                        android:layout_marginEnd="10dp"
                        android:textSize="14sp"
                        android:layout_weight="1"/>
                </GridLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="100dp"
                    android:layout_below="@+id/texts"
                    android:layout_marginEnd="10dp"
                    android:background="@color/black" />
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="@dimen/dm_20sp"
                    android:src="@drawable/ic_baseline_person_24"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/ic_baseline_person_24"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/texts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@+id/icons"
                android:layout_marginTop="@dimen/dm_20sp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/roboto_slab"
                    android:text="List"
                    android:layout_marginEnd="10dp"
                    android:textSize="14sp"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/roboto_slab"
                    android:text="Grid"
                    android:textSize="14sp"
                    android:layout_weight="1"/>
            </LinearLayout>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/texts"
                android:layout_marginTop="@dimen/dm_20sp"
                android:background="@color/black" />
        </RelativeLayout>


    </ScrollView>
</RelativeLayout>
