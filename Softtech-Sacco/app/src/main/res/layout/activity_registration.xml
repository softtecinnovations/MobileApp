<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="30dp"
    android:background="@color/white"
    tools:context=".Registration">

    <ImageView
        android:id="@+id/logoo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo_foreground"/>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/logoo"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:autofillHints="@string/full_name"
        android:background="@drawable/edittext"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:focusedByDefault="true"
        android:hint="@string/full_name"
        android:inputType="textPersonName"
        android:paddingHorizontal="30dp" >
        <requestFocus/>
    </EditText>

    <EditText
        android:id="@+id/ID"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/name"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:autofillHints="@string/id_number"
        android:background="@drawable/edittext"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:hint="@string/id_number"
        android:inputType="number"
        android:paddingHorizontal="30dp" />

    <EditText
        android:id="@+id/phone"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/ID"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:autofillHints="@string/phone_number"
        android:background="@drawable/edittext"
        android:fontFamily="@font/roboto"
        android:textColor="@color/black"
        android:hint="@string/phone_number"
        android:inputType="phone"
        android:paddingHorizontal="30dp" />

    <EditText
        android:id="@+id/kra"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/phone"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="30dp"
        android:autofillHints="@string/kra_number"
android:background="@drawable/edittext"
        android:fontFamily="@font/roboto"
        android:hint="@string/kra_number"
        android:inputType="text"
        android:textColor="@color/black"
        android:paddingHorizontal="30dp" />

    <EditText
        android:id="@+id/sacconame"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/edittext"
        android:hint="@string/sacco_name"
        android:autofillHints="@string/sacco_name"
        android:textColor="@color/black"
        android:layout_below="@+id/kra"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="30dp"
        android:layout_marginBottom="30dp"
        android:inputType="text" />

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sacconame"
        android:layout_marginTop="30dp"
        android:layout_alignEnd="@+id/kra"
        android:background="@drawable/buttons"
        android:text="@string/register"
        android:textStyle="bold"/>

</RelativeLayout>