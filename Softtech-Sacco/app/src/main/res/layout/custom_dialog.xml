<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp">

    <TextView
        android:id="@+id/explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/dm_20sp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:text="Wait for OTP just sent to your phone number for verification"
        android:textSize="17sp"
        android:fontFamily="@font/roboto"
        android:textColor="#4E4C4C"/>
    <LinearLayout
    android:id="@+id/layout_otp"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dm_90sp"
    android:layout_below="@+id/explain"
        android:layout_marginHorizontal="@dimen/dm_40sp"
    android:gravity="center"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/editTextone"
        style="@style/otpedittext"
        android:layout_marginEnd="10dp"
        >
    </EditText>

    <EditText
        android:id="@+id/editTexttwo"
       style="@style/otpedittext"
        android:layout_marginEnd="10dp">
    </EditText>

    <EditText
android:id="@+id/editTextthree"
        style="@style/otpedittext"
        android:layout_marginEnd="10dp"
        />

    <EditText
android:id="@+id/editTextfour"
        style="@style/otpedittext"/>

    </LinearLayout>

    <TextView
        android:id="@+id/resend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout_otp"
        android:layout_centerHorizontal="true"
        android:textSize="17sp"
        android:fontFamily="@font/roboto"
        android:text="Resend code"
        android:textColor="@color/sottechblue" />
</RelativeLayout>